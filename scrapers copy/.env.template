# Honeydoo Environment Variables Template
# Copy this to .env and fill in your actual values

# OpenAI Configuration (already configured)
OPENAI_API_KEY=your-openai-key-here

# AWS Configuration
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your-aws-access-key-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-key-here

# Database Configuration (will be provided after RDS setup)
DATABASE_URL="postgresql://honeydoo_admin:your-password@your-rds-endpoint:5432/honeydoo_prod"

# Cognito Configuration (will be provided after Cognito setup)
COGNITO_USER_POOL_ID=us-west-2_xxxxxxxxx
COGNITO_APP_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
COGNITO_IDENTITY_POOL_ID=us-west-2:xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Redis Configuration (for local development, later ElastiCache)
REDIS_URL="redis://localhost:6379"

# JWT Configuration (for legacy endpoints)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=4000

# Database Master Password (for RDS setup)
DB_MASTER_PASSWORD="HoneydooSecure123!"